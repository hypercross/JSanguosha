package search;

import java.util.HashMap;

public class Util {

	public class City
	{
		String name;
		HashMap<City,Integer> distanceMap;
		
		public City()
		{
			distanceMap = new HashMap<City,Integer>();
		}
	}
	
	public static void put(City a, City b, int dist)
	{
		a.distanceMap.put(b, dist);
		b.distanceMap.put(a, dist);
	}
}
