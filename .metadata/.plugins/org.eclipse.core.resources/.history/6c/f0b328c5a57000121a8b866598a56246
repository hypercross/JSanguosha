package game;

public class ActionSet {
	
	private ActionFilter filter;
	public Type type;
	
	public ActionSet(Type type)
	{
		this.type = type;
	}

	public boolean contains(Action action)
	{
		return filter.checkAll(action);
	}
	
	public ActionFilter filter()
	{
		if(this.filter == null)
			filter = new ActionFilter();
		
		return filter;
	}
}
